{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "./dist/types",
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }],
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": ["solid-js"],
    "jsxImportSource": "solid-js"
  }
}

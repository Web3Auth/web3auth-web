{
  "eslint.options": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    
    "extends": [
      "plugin:vue/essential",
      "vue",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "plugins": ["simple-import-sort"],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "warn",
      "simple-import-sort/imports": 2,
      "simple-import-sort/exports": 2,
      "prettier/prettier": [
        2,
        {
          "singleQuote": false,
          "printWidth": 150,
          "semi": true
        }
      ]
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
}

{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:vue/essential", "eslint:recommended", "@vue/typescript/recommended", "@vue/prettier"],
  "plugins": ["simple-import-sort"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "ignorePatterns": "*.config.js",
  "rules": {
    "no-console": 0,
    "no-debugger": 0,
    "simple-import-sort/imports": 2,
    "simple-import-sort/exports": 2,
    "prettier/prettier": [
      2,
      {
        "singleQuote": false,
        "printWidth": 150,
        "semi": true
      }
    ]
  }
}
